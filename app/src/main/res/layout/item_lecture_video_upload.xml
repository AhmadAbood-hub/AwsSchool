<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/cardCornerRadiusAppointment"

    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/PaddingVideo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/PaddingForSearch">


            <TextView
                android:id="@+id/txtVideoNameUpload"
                style="@style/FontFamily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/White"
                android:textSize="@dimen/TextSizeVideo" />



            <ImageView
                android:id="@+id/imgRemoveVideo"
                android:layout_width="@dimen/WidtehToTime"
                android:layout_height="@dimen/WidtehToTime"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_cancel_white"
                android:backgroundTint="@color/White" />


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>