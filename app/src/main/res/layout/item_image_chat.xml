<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgChatFrgProfile"
        android:src="@drawable/ic_interface"
        android:layout_width="@dimen/WidthAndHeightImageProfile"
        android:layout_height="@dimen/WidthAndHeightImageProfile"
 />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/PaddingForSearch"

        android:layout_toEndOf="@+id/imgChatFrgProfile"
        >
        <TextView
            android:id="@+id/txtChatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/BetweenDontAndSign"

            style="@style/FontFamily"
            android:textSize="@dimen/LoginBtn"
            android:layout_toEndOf="@+id/imgChatFrgProfile"
            />
        <TextView
            android:id="@+id/txtChatLastSeen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontFamily"
            android:textSize="@dimen/newsMoreTextSize"
            />
    </LinearLayout>




</RelativeLayout>