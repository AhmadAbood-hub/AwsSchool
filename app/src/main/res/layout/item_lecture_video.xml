<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/cardCornerRadiusAppointment"

    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/PaddingVideo">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtVideoName"
                    style="@style/FontFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="@dimen/TextSizeVideo" />


                <ImageView
                    android:id="@+id/imgDownload"
                    android:layout_width="@dimen/WidthAndHeightImageProfile"
                    android:layout_height="@dimen/WidthAndHeightImageProfile"
                    android:background="@drawable/ic_file_download"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/White"
                    />

            </RelativeLayout>


            <VideoView
                android:id="@+id/explayerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/WidthForTabWelcome"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/MargintTopForBtn"

                />



        </LinearLayout>


    </FrameLayout>


</androidx.cardview.widget.CardView>