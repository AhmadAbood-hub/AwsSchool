<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/HeightForItemAppointment"
>
    <LinearLayout
        android:layout_margin="@dimen/PaddingForSearch"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtNameCourseMarks"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/newsMoreTextSize"

            style="@style/FontFamily"
            />

        <ImageView
            android:id="@+id/btnCourseGoToDetailMarks"
            android:background="@drawable/ic_chevron_right"
            android:layout_width="@dimen/WidtehToTime"
            android:layout_height="@dimen/WidtehToTime"
            />





    </LinearLayout>



</androidx.cardview.widget.CardView>