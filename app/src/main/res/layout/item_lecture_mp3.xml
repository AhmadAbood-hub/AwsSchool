<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/cardCornerRadiusAppointment"

    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/PaddingVideo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:padding="@dimen/PaddingForSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <TextView
                android:layout_weight="1"
                android:id="@+id/txtMp3Name"
                style="@style/FontFamily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/White"
                android:textSize="@dimen/TextSizeVideo" />


            <ImageView
                android:id="@+id/playMusic"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/WidthAndHeightImageProfile"
                android:layout_height="@dimen/WidthAndHeightImageProfile"
                android:background="@drawable/ic_play"
                android:backgroundTint="@color/White" />


            <ImageView
                android:layout_weight="1"
                android:id="@+id/imgDownloadMp3"
                android:layout_width="@dimen/WidthAndHeightImageProfile"
                android:layout_height="@dimen/WidthAndHeightImageProfile"
    android:layout_alignParentEnd="true"
                android:background="@drawable/ic_file_download"
                android:backgroundTint="@color/White" />


        </RelativeLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>