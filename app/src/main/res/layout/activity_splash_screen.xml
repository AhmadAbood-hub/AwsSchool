<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Views.Activities.SplashScreenActivity">

    <ImageView
        android:src="@drawable/school"
        android:id="@+id/ImageSplashScreen"
        android:layout_width="@dimen/WidthAndHeightSplashImage"
        android:layout_height="@dimen/WidthAndHeightSplashImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/MargintTopForSplashImage"
       />


    <TextView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageSplashScreen"
        android:layout_marginTop="@dimen/MargintTopForAWS"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/TextSizeForAWS"
        android:maxLines="1"
            android:textColor="@android:color/black"
        style="@style/FontFamily"
        />


</RelativeLayout>